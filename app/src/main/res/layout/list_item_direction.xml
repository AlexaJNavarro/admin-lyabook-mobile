<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/item_result_direction"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_direction"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/second" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_region"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/lbl_lat"
                    android:layout_width="27dp"
                    android:layout_height="9dp"
                    android:text="TextView"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/lbl_log"
                    android:layout_width="27dp"
                    android:layout_height="7dp"
                    android:text="TextView"
                    android:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cor"
                android:layout_width="75dp"
                android:layout_height="31dp"
                android:background="@drawable/botton_search"
                android:onClick="Test"
                android:text="Ver"
                android:textColor="@color/details"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>